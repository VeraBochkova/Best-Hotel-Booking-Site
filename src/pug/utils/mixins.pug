// mixin input email
// +input-email({label: "", name: "", placeholder: "", name-modifier(specify modifier name): "true", name-modifier(specify modifier name): "true"})

mixin input-email(options)
  -var labelClassName = "input-email-label"
  -var inputClassName = "input-email"
  //labelClassName += options.name-modifier ? "input-email-label_modifier-class-name" : ""
  //inputClassName += options.name-modifier ? "input-email_modifier-class-name" : ""
  label(class=labelClassName)= options.label
  input(class=inputClassName)(name=options.name, type="email", placeholder=options.placeholder)
    

